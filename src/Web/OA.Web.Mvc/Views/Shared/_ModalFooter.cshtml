@model ModalFooter

<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" id="@Model.CancelButtonId">@Model.CancelButtonText</button>
    @if (!Model.OnlyCancelButton)
    {
        <button type="submit" class="btn btn-success" id="@Model.SubmitButtonId">
            @Model.SubmitButtonText
        </button>
    }
</div>