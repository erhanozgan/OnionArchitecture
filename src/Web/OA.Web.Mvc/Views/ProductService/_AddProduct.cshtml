@model ProductCreateOrUpdateDto

<form asp-action="AddProduct" role="form">
    @await Html.PartialAsync("_ModalHeader", new ModalHeader { Heading = "Add Product" })
    <div class="modal-body form-horizontal">
        <div class="row mb-3">
            <label asp-for="Name" class="col-lg-3 col-form-label"></label>
            <div class="col-lg-9">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <label asp-for="Price" class="col-lg-3 col-form-label"></label>
            <div class="col-lg-9">
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>
    </div>
    @await Html.PartialAsync("_ModalFooter", new ModalFooter { SubmitButtonText = "Save" })
</form>

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}